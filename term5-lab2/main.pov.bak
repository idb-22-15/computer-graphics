#include "colors.inc"    

background{ 
  rgb<0.2,0.2,0.4>
}

light_source {
  <10,30,-3> 
  color White
}

sky_sphere {
  pigment {
    gradient y
    color_map {
      [0 color White]
      [1 color Blue]
    }
  }
}

// camera 1

camera {
  angle 80
  location <2, 1, -2>
  look_at 0
}

