cylinder {
  0, 10*x, 0.03
  pigment { Red }
}
cylinder {
  0, 10*y, 0.03
  pigment { Green }
}
cylinder {
  0, 10*z, 0.03
  pigment { Blue }
}  

#declare ground = prism {
  -1,0, 4
  <8,8>,
  <-8,8>,
  <-8,-8>,
  <8,-8>
  pigment {
    checker Black White scale .5
  }
}

object { ground }

#declare book_cover = union {
  box {
    <-1, -0.05, 1>
    <0, 0.05, -1>
    pigment {
      Brown
    }
    finish {
      reflection {
        0.01
        metallic 1
      }
    }
    rotate <0, 0, -15> // <x°, y°, z°>
  }
  box {
    <-1, -0.05, 1>
    <0, 0.05, -1>
    pigment {
      Brown
    }
    finish {
      reflection {
        0.01
        metallic 1
      }
    }
    rotate <0, 0, 195> // <x°, y°, z°>
  }
}

